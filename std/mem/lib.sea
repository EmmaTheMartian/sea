/**
 * Allocates <'something> on the heap and returns a pointer to it.
 *
 * This *copies* <'something>, so modifying the value passed in will not modify
 * the returned value.
 *
 * Args:
 *  something: T - The value to allocate.
**/
// mac to_heap(something: T) {
// 	var it: ^T = malloc(sizeof(something))
// 	it^ = something
// 	it
// }

mac to_heap(T) -> raw[( T *it = malloc(sizeof(something)), *it = something, it )]
